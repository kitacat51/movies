<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>投稿一覧</h3>
       <table>
           <thead>
               <tr>
                   <th scope="col">投稿日時</th>
                   <th scope="col">コメント</th>
                   <th scope="col">ユーザー名</th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
            <% @comments.each do |comment| %>
            <td>
                <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </td>
            <td>
                <%= comment.body %>
            </td>
            <td>
                <%= link_to admin_user_path(comment.user.id) do %>
                <%= comment.user.name %>
                <% end %>
            </td>
            <td><%= link_to "削除", admin_comment_path(comment.id),method: :delete, "data-confirm" =>"本当に消しますか?", class:"btn btn-sm btn-danger" %></td>
           </tbody>
           <% end %>
       </table>
      
    </div>
  </div>
</div>