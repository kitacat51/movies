<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>投稿一覧</h3>
       <table>
           <thead>
               <tr>
                   <th>投稿日時</th>
                   <th>映画タイトル</th>
                   <th>ユーザー名</th>
               </tr>
           </thead>
           <tbody>
            <% @reviews.each do |review| %>
            <td>
                <%= link_to admin_review_path(review.id) do %>
                <%= review.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
            </td>
            <td>
                <%= review.movie.title %>
            </td>
            <td>
                <%= link_to admin_user_path(review.user.id) do %>
                <%= review.user.name %>
                <% end %>
            </td>

           </tbody>
           <% end %>
       </table>
      
    </div>
  </div>
</div>