<div class="container">
<%= form_with model: @user,url: admin_user_path(@user.id),method: :patch do |f| %>
<h1><%= @user.name %>さんの会員情報編集</h1>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
  <tr>
    <th>ひとこと</th>
    <td><%= f.text_field :introduction %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= f.radio_button :is_deleted, :false %>有効
        <%= f.radio_button :is_deleted, :true %>退会
    </td>
  </tr>
  <tr>
    <td><%= f.submit "変更を保存",class:"btn btn-sm btn-success" %></td>
  </tr>
<% end %>
</table>
</div>