<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h3>会員一覧</h3>
      <table>
       <thead>
         <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
         </tr>
       </thead>
  
       <tbody>  
        <% @users.each do |user| %>
        <tr>
        <td>
          <%= user.id %>
        </td>
        <td><%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
          <% end %>
        </td>
        <td>
           <%= user.email %>
        </td>
        <td>
          <% if user.is_deleted == false %>
          <%= "有効" %>
          <% else %>
          <%= "退会" %>
          <% end %>
        </td>
        </tr>
        <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>