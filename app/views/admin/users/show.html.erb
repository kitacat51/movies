<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1><%= @user.name %>
    の会員詳細
   </h1>

    <table>
     <tr>
       <th>会員ID</th>
       <td><%= @user.id %></td>
     </tr>
     <tr>
       <th>氏名</th>
       <td><%= @user.name %>
       </td>
     </tr>
     <tr>
       <th>メールアドレス</th>
       <td><%= @user.email %></td>
     </tr>
     <tr>
       <th><label for="user_introduction">ひとこと。</label></th>
       <td><%= @user.introduction %></td>
     </tr>
     <tr>
       <th>会員ステータス</th>
       <td><% if @user.is_deleted == false %>
         <%= "有効" %>
         <% else %>
         <%= "退会" %>
         <% end %>
       </td>
     </tr>
     <tr>
       <td>
         <%= link_to "編集する",edit_admin_user_path(@user.id),class:"btn btn-sm btn-success" %>
       </td>
     </tr>
    </table>
    <table>
      <tr>
        <th>映画タイトル</th>
        <th>レビュー内容</th>
      </tr>
      <tr>
        <td>
          
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>
