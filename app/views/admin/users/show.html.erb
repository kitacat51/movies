<div class="container">
<h1><%= @user.name %>
    の会員詳細
</h1>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @user.name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><% if @user.is_deleted == false %>
        <%= "有効" %>
        <% else %>
        <%= "退会" %>
        <% end %>
    </td>
  </tr>
</table>

</div>
