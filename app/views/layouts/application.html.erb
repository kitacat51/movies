<!DOCTYPE html>
<html>
  <head>
    <title>Movies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <a class="navbar-band" href="/">
           <span>あなたの観たい映画は？</span>
         </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
             <li>
              <%= link_to root_path,method: :get, class:'nav-link text-light' do %>
                <i class="fas fa-home"></i> Home
              <% end %>
             </li>
             <li>
              <%= link_to search_path,method: :get,class:'nav-link text-light' do %>
               <i class="fas fa-search"></i></i>Movies Search
              <% end %>
             </li>
             <li>
              <%= link_to mypage_path,method: :get, class:'nav-link text-light' do %>
                <i class="fas fa-users"></i> Mypage
              <% end %>
             </li>
             <li>
              <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i></i> Log out
              <% end %>
             </li>
            <% elsif admin_signed_in? %>
             <li>
              <%= link_to admin_path,method: :get,class:'nav-link text-light' do %>
               <i class="fas fa-user"></i>Admin
              <% end %>
             </li>
             <li>
              <%= link_to  admin_users_path,method: :get,class:'nav-link text-light' do %>
               <i class="fas fa-users"></i>Users
              <% end %>
             </li>
             <li>
              <%= link_to  admin_movies_path,method: :get,class:'nav-link text-light' do %>
               <i class="fas fa-film"></i>Movies
              <% end %>
             </li>
             <li>
              <%= link_to admin_genres_path,method: :get,class:'nav-link text-light' do %>
                <i class="fas fa-film"></i>Genres
              <% end %>
             </li>
             <li>
              <%= link_to destroy_admin_session_path,method: :delete,class:'nav-link text-light' do %>
               <i class="fas fa-sign-out-alt"></i></i> Log out
              <% end %>
             </li>
            <% else %>
              <li>
              <%= link_to root_path,method: :get, class:'nav-link text-light' do %>
                <i class="fas fa-home"></i> Home
              <% end %>
             </li>
             <li>
               <%= link_to about_path, method: :get, class:'nav-link text-light' do %>
                 <i class="fas fa-link"></i> About
               <% end %>
             </li>
             <li>
              <%= link_to search_path,method: :get,class:'nav-link text-light' do %>
               <i class="fas fa-search"></i>Movies Search
              <% end %>
             </li>
             <li>
              <li>
              <%= link_to reviews_path,method: :get,class:'nav-link text-light' do %>
              <i class="fas fa-comment-edit"></i>Reviews
              <% end %>
             </li>
             <li>
               <%= link_to new_user_registration_path, class:'nav-link text-light' do %>
                 <i class="fas fa-user-plus"></i> Sign up
               <% end %>
             </li>
             <li>
               <%= link_to new_user_session_path, class:'nav-link text-light' do %>
                 <i class="fas fa-sign-in-alt"></i> Log in
               <% end %>
             </li>
            
             <% end %>
           </ul>
        </div>
      </div>
   </nav>     
   </header>
   <%= yield %>
  </body>
</html>
