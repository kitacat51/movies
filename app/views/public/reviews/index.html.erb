<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Review一覧</h2>
         <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th>映画タイトル</th>
               <th>ユーザー名</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <% @reviews.each do |review| %>
           <tbody>
            <tr>
             <td>
                <%= link_to review_path(review.id) do %>
                <%= review.movie.title %>
                <% end %>
             </td>
             <td><%= review.user.name %></td>
            </tr> 
            <% end %>
         </div>
         </tbody>
    </div>
  </div>
</div>

    
