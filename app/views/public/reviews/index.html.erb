<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="p-3 mb-2 text-white", style="background-color:#0d806c" >　レビュー</div>
         <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th>映画タイトル</th>
               <th>ユーザー名</th>
               <th>内容</th>
               <th></th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <% @reviews.each do |review| %>
           <tbody>
            <tr>
             <td class="w-20"><%= link_to movie_path(review.movie.id) do %>
                <%= review.movie.title %>
                <% end %>
             </td>
             <td><%= review.user.name %></td>
             <td class="w-30 p-3">
                 <%= link_to review_path(review.id) do %>
                 <%= review.review_contents.truncate(20) %>
                 <% end %>
             </td>
             <td><div id="star_rate_<%= review.id %>"></div>
              <script>
                 var elem = document.getElementById('star_rate_<%= review.id %>');

                if(elem.childElementCount == 0){
                    var opt = { 
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    readOnly: true,
                    score: <%= review.rate || 0 %>
                };
                raty(elem,opt);
                
                }

              </script>
            </td>
            </tr> 
            <% end %>
         </div>
         </tbody>
    </div>
  </div>
</div>

    
