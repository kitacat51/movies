<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
         <%= @user.errors.count %> error prohibited this obj from being saved:
         <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
         </ul>
      <% end %>
      
      <h2>User info</h2>
      <%= form_with model: @users do |f| %>
      <div class="form-group">
         <label for="user_name">Name</label>
         <%= f.text_field :name, class:'form-control',id:"user_name", autofocus: true, id:"inputName", placeholder:"ユーザー名"%>
      </div>
      
      <div class="form-group">
        <label for="email">Email</label>
         <%= f.email_field :email,class:'form-control',id:"email", autofocus: true, id:"email", placeholder:"メールアドレス" %>
      </div>
      <div class="form-group">
         <label for="user_introduction">Introduction</label>
         <%= f.text_area :introduction, class:'form-control introduction',id:"user_introduction", autofocus: true, id:"inputintroduction", placeholder:"  " %>
      </div>
      
      <div class="form-group">
         <%= f.submit "Update User",class:"btn btn-secondary" %>
      </div>
     <% end %>
    </div>
  </div>
</div>