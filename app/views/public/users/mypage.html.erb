
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div class="header"><%#= image_tag "mypagelogo",class: "img-fluid" %>
         <h2>マイページ</h2>
      </div>
        <div class="text-white", style="background-color:#6b8eb3" >　名前</div>
         <p><%= @user.name %></p>
        <div class="text-white", style="background-color:#6b8eb3" >　メールアドレス</div>
         <p><%= @user.email %></p>
        <div class="text-white", style="background-color:#6b8eb3" >　ひとこと。</div>
         <p><%= @user.introduction %></p>
        <div class="text-white", style="background-color:#6b8eb3" >　レビュー</div>
         <table class>
            <thead>
              <tr>
                <th>映画タイトル</th>
                <th>内容</th>
                <th></th>
              </tr>
            </thead>
            <% @reviews.each do |review| %>
            <tbody>
            <td><%= review.movie.title %></td>
            <td><%= review.review_contents %></td>
            <td><%= link_to edit_review_path(review.id) do %>
                <i class="fas fa-wrench"></i>
                <% end %>
            </td>
            <% end %>
         </table>
         <%= link_to "編集", user_edit_path(@user), class:"btn btn-sm btn-success" %>
         <%= link_to "退会", unsubscribe_path,method: :get,class:"btn btn-sm btn-danger" %>
    </div>
  </div>
</div>

    
